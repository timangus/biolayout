<project xmlns="https://maven.apache.org/POM/4.0.0" xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.biolayout</groupId>
    <artifactId>Layout</artifactId>
    <version>1.0</version>
    <packaging>jar</packaging>

    <name>Layout</name>
    <url>http://biolayout.org/</url>

    <properties>
        <productName>BioLayout</productName>
        <versionNumber>3.5</versionNumber>
        <jarName>${productName}</jarName>
        <outFilename>${jarName}-${versionNumber}</outFilename>
        <mainClass>org.biolayout.Layout</mainClass>
        <manifestVersion>1.0.0.0</manifestVersion>
        <copyright>Â© University of Edinburgh 2020</copyright>
        <icon>src/main/resources/Resources/Images/Icon.ico</icon>

        <java.version>8</java.version>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>
        <maven.compiler.release>8</maven.compiler.release>

        <jogampVersion>2.4.0</jogampVersion>

        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <generated.sources.dir>${project.build.directory}/generated-sources/java</generated.sources.dir>
        <buildconfig.template.file>src/main/java/org/biolayout/BuildConfig.template</buildconfig.template.file>
        <buildconfig.file>${generated.sources.dir}/org/biolayout/BuildConfig.java</buildconfig.file>

        <osx.app.dir>${project.build.directory}/osx</osx.app.dir>
        <osx.appbundler.path>${project.basedir}/jars/com/oracle/appbundler/appbundler/1.0/appbundler-1.0.jar</osx.appbundler.path>

        <debug.build>true</debug.build>

        <jarsigner.keystore>selfsign.jks</jarsigner.keystore>
        <jarsigner.p12keystore>selfsign.p12</jarsigner.p12keystore>
        <jarsigner.alias>selfsigned</jarsigner.alias>
        <jarsigner.storepass>password</jarsigner.storepass>
        <jarsigner.keypass>password</jarsigner.keypass>
    </properties>

    <profiles>
        <profile>
            <id>release</id>
            <activation>
                <property>
                    <name>release</name>
                    <value>true</value>
                </property>
            </activation>
            <properties>
                <debug.build>false</debug.build>
            </properties>
        </profile>

        <profile>
            <id>windows-exe</id>
            <activation>
                <property>
                    <name>windows-exe</name>
                    <value>true</value>
                </property>
            </activation>
            <build>
              <plugins>
                <plugin>
                    <groupId>com.akathist.maven.plugins.launch4j</groupId>
                    <artifactId>launch4j-maven-plugin</artifactId>
                    <version>2.4.1</version>
                    <executions>
                        <execution>
                            <id>l4j</id>
                            <phase>package</phase>
                            <goals>
                                <goal>launch4j</goal>
                            </goals>
                            <configuration>
                                <headerType>gui</headerType>
                                <dontWrapJar>true</dontWrapJar>
                                <outfile>${project.build.directory}/${outFilename}.exe</outfile>
                                <jar>${outFilename}.jar</jar>
                                <icon>${icon}</icon>
                                <errTitle>${productName}</errTitle>
                                <jre>
                                    <path>${JAVA_HOME};${PATH}</path>
                                    <minVersion>1.${maven.compiler.release}.0</minVersion>
                                </jre>
                                <versionInfo>
                                    <fileVersion>${manifestVersion}</fileVersion>
                                    <txtFileVersion>${manifestVersion}</txtFileVersion>
                                    <fileDescription>${productName}</fileDescription>
                                    <copyright>${copyright}</copyright>
                                    <productVersion>${manifestVersion}</productVersion>
                                    <txtProductVersion>${manifestVersion}</txtProductVersion>
                                    <productName>${productName}</productName>
                                    <internalName>${jarName}</internalName>
                                    <originalFilename>${outFilename}.exe</originalFilename>
                                </versionInfo>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
              </plugins>
            </build>
        </profile>
    </profiles>

    <dependencies>

        <!-- Java 6 = JAX-B Version 2.0   -->
        <!-- Java 7 = JAX-B Version 2.2.3 -->
        <!-- Java 8 = JAX-B Version 2.2.8 -->
        <dependency>
            <groupId>javax.xml.bind</groupId>
            <artifactId>jaxb-api</artifactId>
            <version>2.2.11</version>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.bind</groupId>
            <artifactId>jaxb-core</artifactId>
            <version>2.2.11</version>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.bind</groupId>
            <artifactId>jaxb-impl</artifactId>
            <version>2.2.11</version>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.jogamp.gluegen</groupId>
            <artifactId>gluegen-rt</artifactId>
            <version>${jogampVersion}</version>
        </dependency>

        <dependency>
            <groupId>org.jogamp.jogl</groupId>
            <artifactId>jogl-all</artifactId>
            <version>${jogampVersion}</version>
        </dependency>

        <dependency>
            <groupId>com.github.sbgn</groupId>
            <artifactId>libsbgn</artifactId>
            <version>milestone2</version>
        </dependency>

        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.2</version>
        </dependency>

        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>2.4</version>
        </dependency>

        <dependency>
            <groupId>org.biopax.paxtools</groupId>
            <artifactId>paxtools-core</artifactId>
            <version>4.3.0</version>
        </dependency>

        <dependency>
            <groupId>pathwaycommons.cpath</groupId>
            <artifactId>cpath-client</artifactId>
            <version>6.0.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
            <version>18.0</version>
        </dependency>
        <dependency>
            <groupId>com.miglayout</groupId>
            <artifactId>miglayout</artifactId>
            <version>3.7.4</version>
        </dependency>

        <dependency>
            <groupId>org.swinglabs</groupId>
            <artifactId>swing-layout</artifactId>
            <version>1.0.3</version>
        </dependency>
        <dependency>
            <groupId>org.jfree</groupId>
            <artifactId>jfreechart</artifactId>
            <version>1.0.17</version>
        </dependency>

        <dependency>
            <groupId>org.antlr</groupId>
            <artifactId>antlr4-maven-plugin</artifactId>
            <version>4.0</version>
        </dependency>

        <dependency>
            <groupId>org.apache.httpcomponents</groupId>
            <artifactId>httpclient</artifactId>
            <version>4.3.6</version>
        </dependency>

        <dependency>
            <groupId>org.apache.httpcomponents</groupId>
            <artifactId>httpmime</artifactId>
            <version>4.3.6</version>
        </dependency>

        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>2.9.1</version>
        </dependency>

        <dependency>
            <groupId>org.scijava</groupId>
            <artifactId>scijava-common</artifactId>
            <version>2.66.0</version>
        </dependency>

        <dependency>
            <groupId>javax.jws</groupId>
            <artifactId>javax.jws-api</artifactId>
            <version>1.1</version>
        </dependency>

        <dependency>
            <groupId>javax.xml.ws</groupId>
            <artifactId>jaxws-api</artifactId>
            <version>2.3.1</version>
        </dependency>

    </dependencies>

    <repositories>
        <repository>
                <id>pathway-commons</id>
                <name>Pathway Commons Repository at Google Code</name>
                <url>https://repo.pathway-commons.googlecode.com/hg/</url>
                <snapshots>
                    <enabled>true</enabled>
                </snapshots>
        </repository>

        <!-- BioPAX release repository -->
        <repository>
                <id>biopax.releases</id>
                <name>BioPAX Repository</name>
                <url>https://www.biopax.org/m2repo/releases/</url>
                <snapshots>
                    <enabled>false</enabled>
                </snapshots>
        </repository>

        <repository>
                <id>biopax.snapshots</id>
                <name>BioPAX Snapshots Repository</name>
                <url>https://www.biopax.org/m2repo/snapshots/</url>
                <snapshots>
                    <enabled>true</enabled>
                </snapshots>
        </repository>

        <repository>
                <id>biopax.snapshots.trove</id>
                <name>BioPAX Snapshots Repository</name>
                <url>https://www.biopax.org/m2repo/snapshots/org/biopax/paxtools/paxtools-trove/</url>
                <snapshots>
                    <enabled>true</enabled>
                </snapshots>
        </repository>

        <repository>
	        <id>jitpack.io</id>
	        <url>https://jitpack.io</url>
        </repository>

        <repository>
	        <id>jogamp.org</id>
	        <url>https://jogamp.org/deployment/maven</url>
        </repository>

        <!-- This allows us to treat local jars as
             normal dependencies -->
        <repository>
            <id>jars</id>
            <releases>
                <enabled>true</enabled>
                <checksumPolicy>ignore</checksumPolicy>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <url>file://${project.basedir}/jars</url>
        </repository>
    </repositories>

    <build>
        <!-- The name for the jar that doesn't include the dependencies -->
        <finalName>${jarName}-${versionNumber}-no-deps</finalName>

        <plugins>
            <!-- This unpacks the jars we depend on into the final jar -->
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <descriptors>
                        <descriptor>jar-with-dependencies.xml</descriptor>
                    </descriptors>
                    <archive>
                        <manifest>
                            <mainClass>${mainClass}</mainClass>
                            <packageName>org.biolayout</packageName>
                        </manifest>
                        <manifestEntries>
                            <url>${project.url}</url>
                            <Application-Name>${productName}</Application-Name>
                            <Permissions>all-permissions</Permissions>
                            <Application-Library-Allowable-Codebase>*</Application-Library-Allowable-Codebase>
                            <Caller-Allowable-Codebase>*</Caller-Allowable-Codebase>
                            <Codebase>*</Codebase>
                        </manifestEntries>
                    </archive>

                    <!-- The name for the jar that includes the dependencies -->
                    <finalName>${outFilename}</finalName>

                    <!-- Stop the plugin appending jar-with-dependencies to the name -->
                    <appendAssemblyId>false</appendAssemblyId>
                    <attach>false</attach>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jarsigner-plugin</artifactId>
                <version>1.2</version>
                <executions>
                    <execution>
                        <id>sign</id>
                        <goals>
                            <goal>sign</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <skip>false</skip>
                    <archive>${project.build.directory}/${outFilename}.jar</archive>
                    <keystore>${jarsigner.keystore}</keystore>
                    <alias>${jarsigner.alias}</alias>
                    <storepass>${jarsigner.storepass}</storepass>
                    <keypass>${jarsigner.keypass}</keypass>
                    <arguments>
                        <argument>-sigalg</argument>
                        <argument>SHA1withRSA</argument>
                        <argument>-digestalg</argument>
                        <argument>SHA1</argument>
                    </arguments>
                </configuration>
            </plugin>

            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.7</version>
                <executions>
                    <execution>
                        <id>osxAppCopy</id>
                        <phase>package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <path id="path.appbundler">
                                    <pathelement path="${osx.appbundler.path}"></pathelement>
                                </path>
                                <mkdir dir="${osx.app.dir}" />
                                <taskdef name="bundleapp"
                                        classname="com.oracle.appbundler.AppBundlerTask"
                                        classpathref="path.appbundler" />
                                <bundleapp outputdirectory="${osx.app.dir}"
                                        name="${productName}"
                                        displayname="${productName}"
                                        icon="${basedir}/src/main/osx/Contents/Resources/Icon.icns"
                                        identifier="${project.groupId}"
                                        shortversion="${project.version}"
                                        copyright="${copyright}"
                                        mainclassname="${mainClass}" >
                                    <classpath file="${project.build.directory}/${outFilename}.jar" />
                                    <option value="-Xmx32000m"/>
                                    <option value="-Dapple.laf.useScreenMenuBar=true"/>
                                    <option value="-Xdock:name=${productName}"/>
                                </bundleapp>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- Extract the native libraries we depend on into the resources tree -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.6</version>
                <executions>

                    <execution>
                        <id>unpack</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>

                                <!-- jogl-all native windows-amd64 -->
                                <artifactItem>
                                    <groupId>org.jogamp.jogl</groupId>
                                    <artifactId>jogl-all</artifactId>
                                    <version>${jogampVersion}</version>
                                    <classifier>natives-windows-amd64</classifier>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/classes/Resources/Libraries</outputDirectory>
                                    <includes>**\/*.dll</includes>
                                    <excludes>**\/*newt.*,**\/*_mobile.*</excludes>
                                </artifactItem>

                                <!-- gluegen-rt native windows-amd64 -->
                                <artifactItem>
                                    <groupId>org.jogamp.gluegen</groupId>
                                    <artifactId>gluegen-rt</artifactId>
                                    <version>${jogampVersion}</version>
                                    <classifier>natives-windows-amd64</classifier>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/classes/Resources/Libraries</outputDirectory>
                                    <includes>**\/*.dll</includes>
                                    <excludes>**\/*newt.*,**\/*_mobile.*</excludes>
                                </artifactItem>


                                <!-- jogl-all native linux-amd64 -->
                                <artifactItem>
                                    <groupId>org.jogamp.jogl</groupId>
                                    <artifactId>jogl-all</artifactId>
                                    <version>${jogampVersion}</version>
                                    <classifier>natives-linux-amd64</classifier>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/classes/Resources/Libraries</outputDirectory>
                                    <includes>**\/*.so</includes>
                                    <excludes>**\/*newt.*,**\/*_mobile.*</excludes>
                                </artifactItem>

                                <!-- gluegen-rt native linux-amd64 -->
                                <artifactItem>
                                    <groupId>org.jogamp.gluegen</groupId>
                                    <artifactId>gluegen-rt</artifactId>
                                    <version>${jogampVersion}</version>
                                    <classifier>natives-linux-amd64</classifier>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/classes/Resources/Libraries</outputDirectory>
                                    <includes>**\/*.so</includes>
                                    <excludes>**\/*newt.*,**\/*_mobile.*</excludes>
                                </artifactItem>


                                <!-- jogl-all native macosx-universal -->
                                <artifactItem>
                                    <groupId>org.jogamp.jogl</groupId>
                                    <artifactId>jogl-all</artifactId>
                                    <version>${jogampVersion}</version>
                                    <classifier>natives-macosx-universal</classifier>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/classes/Resources/Libraries</outputDirectory>
                                    <includes>**\/*.dylib</includes>
                                    <excludes>**\/*newt.*,**\/*_mobile.*</excludes>
                                </artifactItem>

                                <!-- gluegen-rt native macosx-universal -->
                                <artifactItem>
                                    <groupId>org.jogamp.gluegen</groupId>
                                    <artifactId>gluegen-rt</artifactId>
                                    <version>${jogampVersion}</version>
                                    <classifier>natives-macosx-universal</classifier>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/classes/Resources/Libraries</outputDirectory>
                                    <includes>**\/*.dylib</includes>
                                    <excludes>**\/*newt.*,**\/*_mobile.*</excludes>
                                </artifactItem>

                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>com.google.code.maven-replacer-plugin</groupId>
                <artifactId>maven-replacer-plugin</artifactId>
                <version>1.4.0</version>
                <executions>
                    <execution>
                        <id>BuildConfig.java</id>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>replace</goal>
                        </goals>
                        <configuration>
                            <file>${buildconfig.template.file}</file>
                            <outputFile>${buildconfig.file}</outputFile>
                            <replacements>
                                <replacement>
                                    <token>@package@</token>
                                    <value>${project.groupId}</value>
                                </replacement>
                                <replacement>
                                    <token>@name@</token>
                                    <value>${productName}</value>
                                </replacement>
                                <replacement>
                                    <token>@version@</token>
                                    <value>${versionNumber}</value>
                                </replacement>
                                <replacement>
                                    <token>@url@</token>
                                    <value>${project.url}</value>
                                </replacement>
                                <replacement>
                                    <token>@buildTime@</token>
                                    <value>${maven.build.timestamp}</value>
                                </replacement>
                                <replacement>
                                    <token>@debug@</token>
                                    <value>${debug.build}</value>
                                </replacement>
                            </replacements>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>1.7</version>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${generated.sources.dir}</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.antlr</groupId>
                <artifactId>antlr4-maven-plugin</artifactId>
                <version>4.0</version>
                <configuration>
                    <sourceDirectory>${basedir}/src/main/java/</sourceDirectory>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>antlr4</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>
</project>
